        <div class="row metric">
          <div class="span1 metric_name">
            <small><%= link_to metric.name, metric.graph_url, :target => '_blank' %></small>
          </div>

          <% values = metric.values %>

          <div class="span2 sparklines" values="<%= values.join(',') %>">&nbsp;
          </div>

          <div class="span1 metric_value">
            <strong><%= display_last_value(values) %></strong><br>
            <small class="muted"><%= metric.units %></small>
          </div>
        </div>
